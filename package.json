{
  "name": "jingo",
  "version": "1.9.4",
  "description": "A nodejs based wiki engine",
  "author": "Claudio Cicali <claudio.cicali@gmail.com>",
  "keywords": [
    "wiki",
    "git",
    "engine",
    "gollum",
    "cms",
    "markdown"
  ],
  "standard": {
    "ignore": [
      "/public/vendor/"
    ],
    "globals": [
      "expect",
      "describe",
      "Git",
      "sinon",
      "chai"
    ]
  },
  "main": "jingo",
  "bin": {
    "jingo": "./jingo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claudioc/jingo"
  },
  "directories": {
    "lib": "./lib/"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "commander": "^5.1.0",
    "connect-pg-simple": "^6.1.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "ecstatic": "^4.1.4",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "markdown-toc": "^1.2.0",
    "marked": "^1.0.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "node-syntaxhighlighter": "*",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-openstreetmap": "^0.1.2",
    "pg": "^8.0.3",
    "pug": "^2.0.4",
    "semver": "^7.3.2",
    "serve-favicon": "^2.5.0",
    "transliteration": "^2.1.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4",
    "sinon": "^9.0.2"
  },
  "scripts": {
    "test": "node_modules/.bin/mocha test/spec",
    "start": "./jingo -c config.yaml",
    "start-dev": "nodemon ./jingo -c config.yaml"
  },
  "engines": {
    "node": ">=0.8",
    "npm": ">=1.1"
  },
  "license": "MIT"
}
